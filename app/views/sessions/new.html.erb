<h1>Login User</h1>

<form action="<%= session_url %>" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="email">Email:</label>
  <input
    type="text"
    name="user[email]"
    value="<%= @user.email if @user %>"
    id="email">
  <br>

  <label for="password">Password:</label>
  <input
    type="password"
    name="user[password]"
    value="<%= @user.password if @user %>"
    id="password">
  <br>

  <input type="Submit">
</form>
